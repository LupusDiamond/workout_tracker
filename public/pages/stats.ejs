  <main class="flex w-full h-screen appearance-none">
    <!-- Side Bar -->
    <%- include('partials/avatar.ejs'); -%>
    <!-- Navigation -->
    <nav>
      <ul id="swup" class="transition-pop flex flex-col justify-between text-2xl font-semibold -mt-16 b-color">
