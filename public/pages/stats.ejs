    </nav>
  
    <a href="/login" class="b-color">Sign Out</a>
  </div>
    <!-- main -->
    <div id="swup" class="flex flex-col transition-fade p-8 w-full ovweflow-y-scroll">
      <header class="flex justify-between items-baseline w-full">
        <h1 id="contextual-messages" class="text-5xl p-color font-bold">
          Your Stats
        </h1>
        <div class="flex items-center text-right p-color text-xl font-bold">
          BMI : <div class="ml-2 p-2 rounded pill text-base font-base">20.07</div>
        </div>
      </header>

      <!-- Chart -->

      <div id="chart" class="flex-grow card p-8 rounded-lg shadow-md mt-8 w-full">
          <canvas id="myChart" width="50" height="20"></canvas>
      </div>


      <script>
          var ctx = document.getElementById('myChart').getContext('2d');
          var myChart = new Chart(ctx, {
              type: 'line',
              data: {
                  labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                  datasets: [{
                      label: 'Weight',
                      data: [30, 65, 42, 68, 70, 76, 48, 65, 82, 70, 60, 32],
                      backgroundColor: [
                          'rgba(0,0,255,0.1)'
                      ],
                      borderColor: [
                          '#2074f3',
                      ],
                      borderWidth: 3
                  }]
              },
              options: {
                  scales: {
                      yAxes: [{
                          ticks: {
                              beginAtZero: true
                          }
                      }]
                  }
              }
          });
          </script>
  </main>
</body>
