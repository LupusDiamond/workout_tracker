<body class="w-full min-h-screen flex justify-center items-center">
  <main class="relative overflow-hidden flex card rounded-lg">
    <!-- Login Form -->
    <form
      id="login"
      class="transform flex flex-col justify-center py-8 px-12 p-color"
      action="/login"
      method="POST"
    >
      <h1 class="text-4xl text-center font-bold mb-8">Welcome</h1>

      <label for="email" class="text-sm font-bold uppercase mb-2"
        >Email</label
      >
      <input
        type="email"
        name="l-email"
        id="l-email"
        class="text-lg font-bold p-2 input-border focus:outline-none w-64 mb-4"
        requicurrentColor
      />
      <label for="password" class="text-sm font-bold uppercase mb-2"
        >password</label
      >
      <input
        type="password"
        name="password"
        minlength="8"
        maxlength="16"
        id="l-password"
        class="text-lg font-bold p-2 input-border focus:outline-none w-64"
        requicurrentColor
      />

      <p
        class="opacity-0 flex items-center py-2 text-xs font-bold text-red-600"
      >
        <span>
          <svg
            class="h-3 w-3 mr-1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
