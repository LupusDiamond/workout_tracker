              d="M13 16H12V12H11M12 8H12.01M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </span>
        Invalid Password/Email
      </p>
      <input
        type="submit"
        value="Log In"
        class="py-4 w-full rounded-lg button text-white text-lg focus:outline-none transform focus:scale-95"
      />
    </form>

    <!-- Register Form -->

    <form
      id="register"
      class="transform flex flex-col justify-center py-8 px-12 p-color"
      method="POST"
      action="/register"
    >
      <h1 class="text-4xl text-center font-bold mb-8">Register</h1>

      <label for="username" class="text-sm font-bold uppercase mb-2"
        >name</label
      >
      <input
        type="text"
        name="r_username"
        maxlength="8"
        id="r-username"
        class="text-lg font-bold p-2 input-border focus:outline-none w-64 mb-4"
        requicurrentColor
      />
      <label for="email" class="text-sm font-bold uppercase mb-2"
        >Email</label
