      <input
        type="email"
        name="r_email"
        id="r-email"
        class="text-lg font-bold p-2 input-border focus:outline-none w-64 mb-4"
        requicurrentColor
      />
      <label for="password" class="text-sm font-bold uppercase mb-2"
        >password</label
      >
      <input
        type="password"
        name="r_password"
        minlength="8"
        maxlength="16"
        id="r-password"
        class="text-lg font-bold p-2 input-border focus:outline-none w-64 mb-6"
        requicurrentColor
      />
      <input
        type="submit"
        value="Register"
        id="r-submit"
        class="py-4 w-full rounded-lg button text-white text-lg focus:outline-none transform focus:scale-95"
