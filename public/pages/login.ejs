    var overlay = document.querySelector(".overlayCard");
    var login = document.querySelector("#loginOverlay");
    var register = document.querySelector("#registerOverlay");
    var loginForm = document.querySelector("#login");
    var registerForm = document.querySelector("#register");

    function loginAction() {
      overlay.classList.add("right-0");
      overlay.classList.remove("left-0");
      login.classList.add("opacity-0");
      login.classList.remove("opacity-100");
      login.classList.add("pointer-events-none");
      register.classList.add("opacity-100");
      register.classList.remove("pointer-events-none");
      registerForm.classList.add("pointer-events-none");
      loginForm.classList.remove("pointer-events-none");
    }

    function registerAction() {
      overlay.classList.add("left-0");
      overlay.classList.remove("right-0");
      register.classList.add("opacity-0");
      register.classList.remove("opacity-100");
      register.classList.add("pointer-events-none");
      login.classList.add("opacity-100");
      login.classList.remove("pointer-events-none");
      loginForm.classList.add("pointer-events-none");
      registerForm.classList.remove("pointer-events-none");
    }
